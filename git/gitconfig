[core]
  quotepath = false
  excludesfile = ~/.gitignore
  autocrlf = input

[alias]
  au = add --update
  c  = commit -m
  d  = diff
  ds = diff --staged
  du = diff upstream/master
  cm = commit --amend --no-edit
  fx = !git add --update && git cm && git p
  f  = fetch --prune
  fu = fetch --prune upstream
  ru = rebase upstream/master
  ri = rebase --interactive upstream/master
  p  = push --force
  pu = pull-request
  s  = stash
  sp = stash pop
  st = status
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an <%ae>%Creset' --abbrev-commit

[push]
  default = simple

[color]
  ui = auto

[difftool]
  prompt = false

[diff]
  tool = vimdiff

[help]
  autocorrect = 1

[include]
  path = ~/.gitconfig.user
